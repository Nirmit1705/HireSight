{
  "name": "hiresight-backend",
  "version": "1.0.0",
  "description": "Backend API for Hiresight interview preparation platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "set NODE_ENV=test&& jest",
    "test:watch": "set NODE_ENV=test&& jest --watch",
    "test:coverage": "set NODE_ENV=test&& jest --coverage",
    "test:unit": "set NODE_ENV=test&& jest __tests__/unit",
    "test:integration": "set NODE_ENV=test&& jest __tests__/integration",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "db:seed": "npx ts-node prisma/seed.ts"
  },
  "prisma": {
    "seed": "npx ts-node prisma/seed.ts"
  },
  "keywords": [
    "interview",
    "preparation",
    "authentication",
    "api"
  ],
  "author": "Hiresight Team",
  "license": "MIT",
  "dependencies": {
    "@deepgram/sdk": "^4.11.2",
    "@prisma/client": "^5.8.1",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/redis": "^4.0.10",
    "@types/ws": "^8.18.1",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "docx": "^9.5.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "openai": "^5.13.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.2.0",
    "redis": "^5.8.1",
    "sharp": "^0.34.3",
    "tesseract.js": "^6.0.1",
    "uuid": "^9.0.1",
    "ws": "^8.18.3"
  },
